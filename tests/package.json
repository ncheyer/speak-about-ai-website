{
  "name": "speak-about-ai-tests",
  "version": "1.0.0",
  "description": "Test suite for Speak About AI public forms",
  "scripts": {
    "test:api": "node form-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:api && npm run test:e2e",
    "test:install": "npm install && npx playwright install",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}